<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tareas.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.tareas.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaUsuarioServlet</servlet-name>
        <servlet-class>com.tareas.web.AltaUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaNuevaTarea</servlet-name>
        <servlet-class>com.tareas.web.AltaNuevaTarea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarServlet</servlet-name>
        <servlet-class>com.tareas.web.EliminarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EstadoServlet</servlet-name>
        <servlet-class>com.tareas.web.EstadoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaUsuarioServlet</servlet-name>
        <url-pattern>/alta-nuevo-usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaNuevaTarea</servlet-name>
        <url-pattern>/AltaNuevaTarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarServlet</servlet-name>
        <url-pattern>/eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EstadoServlet</servlet-name>
        <url-pattern>/estado</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
